{
  "name": "gymapp",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/simonchambart/GymApp.git",
  "author": "ChambartSimon <simon.chambart@student.hogent.be>",
  "license": "UNLICENSED",
  "jest": {
    "testPathIgnorePatterns": [
      "src",
      "node_modules",
      "config"
    ]
  },
  "scripts": {
    "start": "npx env-cmd nodemon",
    "test": "npx env-cmd -f .env.test jest",
    "lint": "npx eslint . --fix"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.0",
    "argon2": "^0.31.2",
    "body-parser": "^1.20.1",
    "config": "^3.3.8",
    "env-cmd": "^10.1.0",
    "helmet": "^7.1.0",
    "jest": "^29.0.3",
    "jev": "^0.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.3.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^7.0.2",
    "koa2-cors": "^2.0.6",
    "mysql2": "^2.3.3",
    "node-emoji": "^1.11.0",
    "serialize-error": "^8.1.0",
    "supertest": "^6.1.6",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "npm": ">=9.8.0",
    "node": ">=20.6.0",
    "yarn": ">=1.22.0"
  }
}
